<Application x:Class="EmployeeInfoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EmployeeInfoApp"
             StartupUri="MainWindow.xaml">
<Application.Resources>
    <Style x:Key="btnStyle" TargetType="Button">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Foreground" Value="#FF007AFF"/>
      <Setter Property="Background" Value="Coral"/>
      <Setter Property="Height" Value="50"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
        <!--Triggers-->
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="SkyBlue"></Setter>
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#FF007AFF"/>
          <Setter Property="Foreground" Value="Coral"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="txtStyle" TargetType="TextBlock">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Foreground" Value="Black"/>
      <Setter Property="Background" Value="#FFF0D9D9"/>
    <Setter Property="TextAlignment" Value="Justify"/>
    </Style>
  </Application.Resources>
</Application>
